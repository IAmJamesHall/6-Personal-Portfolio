extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 My Portfolio
      p.lead.text-light
        | What I'm proud of
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project, i in projects
        .cell
          a(href=`/projects/${i}`)
            img.thumbnail(src=`${project["image-urls"][0]}`)
            h5= project["project-name"]
      
